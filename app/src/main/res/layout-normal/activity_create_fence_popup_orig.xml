<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="320dp"
                android:background="@drawable/rounded_rectangle_bg"
                android:layout_centerInParent="true"
                android:id="@+id/relativeLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Speed Limit"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:focusableInTouchMode="true">

                        <EditText
                            android:id="@+id/tv_code"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="30dp"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:hint="000"/>

                        <Spinner
                            android:theme="@style/devicespinnerstyletheme"
                            android:id="@+id/spinner1"
                            android:spinnerMode="dropdown"
                            android:layout_marginStart="10dp"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_toEndOf="@+id/tv_code"
                            android:entries="@array/speed"
                            android:prompt="@string/speed_type_prompt"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="#ffffff"/>

                       <!-- <TextView
                            android:layout_width="110dp"
                            android:layout_height="30dp"
                            android:layout_toEndOf="@+id/speedlimit"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:text="Kmph/mph"/>
-->

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Shape"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:focusableInTouchMode="true">

                        <Spinner
                            android:theme="@style/devicespinnerstyletheme"
                            android:id="@+id/spinner2"
                            android:spinnerMode="dropdown"
                            android:layout_marginStart="30dp"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:entries="@array/shapes"
                            android:prompt="@string/shape_promt"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="#ffffff"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Radius(mts)"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <EditText
                            android:id="@+id/radius"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="30dp"
                            android:background="#ffffff"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:hint="000"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <Button
                            android:id="@+id/ep_btn_activate"
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:text="Use Default Settings"
                            android:textSize="10sp"
                            android:background="@drawable/button_rounded_add"/>

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="20dp"
                            android:text="Create Fence"
                            android:textSize="10sp"
                            android:layout_toEndOf="@+id/ep_btn_activate"
                            android:background="@drawable/button_rounded_add"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
