<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_notification_row"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:layout_marginLeft="@dimen/layout_margin_left_right_twenty"
            android:layout_marginRight="@dimen/layout_margin_left_right_twenty"
            android:orientation="horizontal"
            android:background="@drawable/member_bar">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/img1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_profile_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".9"
                                android:text="Member 1"
                                android:textSize="16sp"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight=".08"
                                android:layout_toEndOf="@+id/tv_profile_name"
                                android:background="@drawable/phone_icon_dark"/>

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_prodile_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="member1@gmail.com"
                            android:textSize="@dimen/text_size_twelve"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_profile_udid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="udid"
                            android:textSize="@dimen/text_size_twelve"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/online_status"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight=".05"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/circle_green"/>

                            <TextView
                                android:id="@+id/tv_profile_status"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:layout_weight=".95"
                                android:text="Online"
                                android:textSize="10sp"/>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".9">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2.5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btn_profile_view"
                            android:layout_width="@dimen/image_width_twenty"
                            android:layout_height="@dimen/image_height_twenty"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/edit_icon"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".3">


                        <View
                            android:layout_width="fill_parent"
                            android:layout_marginLeft="@dimen/layout_margin_left_right_eight"
                            android:layout_marginRight="@dimen/layout_margin_left_right_eight"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_height="1dp"
                            android:background="#000000"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btn_profile_delete"
                            android:layout_width="@dimen/image_width_twenty"
                            android:layout_height="@dimen/image_height_twenty"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/delete"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"/>

                    </RelativeLayout>



                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
