<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/image_width_sixty"
                android:layout_height="@dimen/image_height_thirty_five"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_shape"/>

            <ImageView
                android:layout_width="@dimen/image_width_twenty"
                android:layout_height="@dimen/image_height_fifteen"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/black_group_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/tv_groupname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_groupmember_count"
                android:layout_marginTop="@dimen/layout_margin_top_twenty"
                android:text="Default"
                android:textSize="@dimen/text_size_eighteen"/>

            <TextView
                android:id="@+id/tv_groupmember_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_groupname"
                android:layout_marginLeft="@dimen/layout_margin_left_right_twenty"
                android:text="1 member in this circle"
                android:textSize="@dimen/text_size_twelve"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/image_width_thirty"
                android:layout_height="@dimen/image_height_thirty"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_icon"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00405D"/>

    </RelativeLayout>

</RelativeLayout>