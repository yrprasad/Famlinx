<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fitsSystemWindows="true"
                                        tools:openDrawer="start">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <!-- include your toolbar layout-->
        <include
            android:id="@+id/inc_toolbar"
            layout="@layout/toolbar_member_profile"/>
        <!-- Let's add fragment -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="20">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="18">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="13">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <android.support.v4.widget.NestedScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fillViewport="true">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:orientation="vertical"
                                                    android:weightSum="13">

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="30dp"/>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="100dp">

                                                        <ImageView
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:layout_centerHorizontal="true"
                                                            android:layout_centerVertical="true"
                                                            android:background="@drawable/img1"/>

                                                        <ImageView
                                                            android:layout_width="100dp"
                                                            android:layout_height="60dp"
                                                            android:layout_alignParentBottom="true"
                                                            android:layout_centerHorizontal="true"
                                                            android:background="@drawable/layer"/>

                                                        <ImageView
                                                            android:layout_width="20dp"
                                                            android:layout_height="30dp"
                                                            android:layout_alignParentBottom="true"
                                                            android:layout_centerHorizontal="true"
                                                            android:background="@drawable/edit_icon"
                                                            android:backgroundTint="#ffffff"/>


                                                    </RelativeLayout>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="30dp"/>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="100dp"
                                                        android:focusableInTouchMode="true">

                                                        <TextView
                                                            android:id="@+id/name"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="56dp"
                                                            android:text="Name"
                                                            android:textColor="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>

                                                        <EditText
                                                            android:id="@+id/et_ep_username"
                                                            android:layout_width="600dp"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/name"
                                                            android:layout_marginStart="50dp"
                                                            android:hint="Member 1"
                                                            android:textColor="#000000"
                                                            android:textColorHint="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>


                                                    </RelativeLayout>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="100dp"
                                                        android:focusableInTouchMode="true">

                                                        <TextView
                                                            android:id="@+id/email"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="56dp"
                                                            android:text="Email"
                                                            android:textColor="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>

                                                        <TextView
                                                            android:id="@+id/et_ep_email"
                                                            android:layout_width="600dp"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/email"
                                                            android:layout_marginStart="50dp"
                                                            android:hint="Email"
                                                            android:textColor="#000000"
                                                            android:textColorHint="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>

                                                    </RelativeLayout>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="100dp">

                                                        <TextView
                                                            android:id="@+id/associated"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="56dp"
                                                            android:text="Associated With"
                                                            android:textColor="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>

                                                        <!--<Spinner
                                                            android:id="@+id/spinner"
                                                            android:layout_width="600dp"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/associated"
                                                            android:layout_marginStart="50dp"
                                                            android:background="@drawable/spinner_background"
                                                            android:entries="@array/associated_with"
                                                            android:popupBackground="#ffffff"
                                                            android:prompt="@string/associated_prompt"
                                                            android:spinnerMode="dropdown"
                                                            android:theme="@style/devicespinnerstyletheme"/>-->

                                                        <TextView
                                                            android:id="@+id/et_associated_with"
                                                            android:layout_width="600dp"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/associated"
                                                            android:layout_marginStart="50dp"
                                                            android:hint="Associated With"
                                                            android:textColor="#000000"
                                                            android:textColorHint="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>

                                                    </RelativeLayout>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="100dp">

                                                        <TextView
                                                            android:id="@+id/member_type"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="56dp"
                                                            android:text="Member Type"
                                                            android:textColor="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>

                                                        <!--<Spinner
                                                            android:id="@+id/spinner1"
                                                            android:layout_width="600dp"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/member_type"
                                                            android:layout_marginStart="50dp"
                                                            android:background="@drawable/spinner_background"
                                                            android:entries="@array/member_type"
                                                            android:popupBackground="#ffffff"
                                                            android:prompt="@string/member_type_prompt"
                                                            android:spinnerMode="dropdown"
                                                            android:theme="@style/devicespinnerstyletheme"/>-->
                                                        <TextView
                                                            android:id="@+id/et_member_type"
                                                            android:layout_width="600dp"
                                                            android:layout_height="wrap_content"
                                                            android:layout_below="@+id/member_type"
                                                            android:layout_marginStart="50dp"
                                                            android:hint="Member Type"
                                                            android:textColor="#000000"
                                                            android:textColorHint="#000000"
                                                            android:textSize="@dimen/text_size_eighteen"/>


                                                    </RelativeLayout>


                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="90dp">

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:orientation="horizontal"
                                                            android:weightSum="3">

                                                            <RelativeLayout
                                                                android:layout_width="0dp"
                                                                android:layout_height="match_parent"
                                                                android:layout_weight="1">

                                                                <Button
                                                                    android:id="@+id/btn_ep_save"
                                                                    android:layout_width="135dp"
                                                                    android:layout_height="60dp"
                                                                    android:layout_centerHorizontal="true"
                                                                    android:background="@drawable/button_rounded_add"
                                                                    android:onClick="onSaveChildProfileClickHandler"
                                                                    android:text="Save"
                                                                    android:textSize="18sp"/>

                                                            </RelativeLayout>

                                                            <RelativeLayout
                                                                android:layout_width="0dp"
                                                                android:layout_height="match_parent"
                                                                android:layout_weight="1">

                                                                <Button
                                                                    android:id="@+id/btn_ep_delete"
                                                                    android:layout_width="135dp"
                                                                    android:layout_height="60dp"
                                                                    android:layout_centerHorizontal="true"
                                                                    android:background="@drawable/button_rounded_add"
                                                                    android:onClick="onDeleteChildProfileClickHandler"
                                                                    android:text="Delete"
                                                                    android:textSize="18sp"/>

                                                            </RelativeLayout>

                                                            <RelativeLayout
                                                                android:layout_width="0dp"
                                                                android:layout_height="match_parent"
                                                                android:layout_weight="1">

                                                                <Button
                                                                    android:id="@+id/btn_ep_cancel"
                                                                    android:layout_width="135dp"
                                                                    android:layout_height="60dp"
                                                                    android:layout_centerHorizontal="true"
                                                                    android:background="@drawable/button_rounded_add"
                                                                    android:text="Cancel"
                                                                    android:textSize="18sp"/>

                                                            </RelativeLayout>

                                                        </LinearLayout>


                                                    </RelativeLayout>

                                                </LinearLayout>

                                            </LinearLayout>

                                        </android.support.v4.widget.NestedScrollView>

                                    </LinearLayout>


                                </RelativeLayout>

                            </LinearLayout>

                        </android.support.v4.widget.NestedScrollView>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
