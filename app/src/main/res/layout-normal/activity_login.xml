<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="15">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fourty">
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="@dimen/layout_width_two_twenty_two"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/famlinx_logo" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="7"
        android:background="@drawable/user_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2">

                        <ImageView
                            android:id="@+id/editText"
                            android:layout_width="@dimen/image_width_fifteen"
                            android:layout_height="@dimen/image_height_twenty"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/username"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".02">

                        <View
                            android:id="@+id/view"
                            android:layout_width="1dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/layout_height_thirty"
                            android:background="#ffffff" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".78"
                        android:focusableInTouchMode="true">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:theme="@style/TextLabel">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_udid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/layout_margin_left_ten"
                                android:background="@android:color/transparent"
                                android:hint="UserName"
                                android:inputType="text"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff"/>
                        </android.support.design.widget.TextInputLayout>

                      <!--  <AutoCompleteTextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/image_height_thirty"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/layout_margin_left_ten"
                            android:paddingLeft="@dimen/text_padding_five"
                            android:fontFamily="sans-serif"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:background="@android:color/transparent"
                            android:hint="User Name"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/text_size_twelve"
                            android:layout_marginRight="@dimen/layout_margin_thirty"/>-->


                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2">

                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_margin_left_right_ten"
                    android:layout_marginRight="@dimen/layout_margin_left_right_ten"
                    android:layout_height="1dp"
                    android:background="#ffffff"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2">

                        <ImageView
                            android:id="@+id/editText3"
                            android:layout_width="@dimen/image_width_fifteen"
                            android:layout_height="@dimen/image_height_twenty"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/password"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".02">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="1dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_height="@dimen/layout_height_thirty"
                            android:background="#ffffff" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".78"
                        android:focusableInTouchMode="true">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="#ffffff"
                            android:theme="@style/TextLabel">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/layout_margin_left_ten"
                                android:background="@android:color/transparent"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff"/>
                        </android.support.design.widget.TextInputLayout>


                        <!--<EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/image_height_thirty"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/layout_margin_left_ten"
                            android:paddingLeft="@dimen/text_padding_five"
                            android:fontFamily="sans-serif"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:background="@android:color/transparent"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:layout_marginRight="@dimen/layout_margin_thirty"
                            android:textSize="@dimen/text_size_twelve"/>-->

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

           <!-- <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">

                <CheckBox
                    android:id="@+id/checkbox_show_password"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:text="Show Password"
                    android:textSize="@dimen/text_size_twelve"
                    android:textColor="#ffffff"
                    android:buttonTint="#ffffff"/>

            </RelativeLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3">

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="@dimen/button_width_two_twenty"
                    android:layout_height="@dimen/button_height_fourty"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Login"
                    android:textSize="@dimen/text_size_twelve"
                    android:onClick="OnLoginButtonClick"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bt_forgotpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/layout_margin_left_sixteen"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:text="Forgot Password?"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_twelve"
                    android:onClick="onForgotPasswordClick"/>

                <TextView
                    android:id="@+id/bt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="@dimen/text_size_fourteen"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:text="Sign up"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_twelve"
                    android:onClick="onSignUpClick"/>


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/nglinx_logo"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.2"/>

</LinearLayout>
