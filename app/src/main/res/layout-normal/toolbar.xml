<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="15">

        <RelativeLayout
            android:id="@+id/menu_toolbar_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height_fourty"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/menu_toolbar"
                android:layout_width="@dimen/image_width_twenty_five"
                android:layout_height="@dimen/image_height_fifteen"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/menu"/>

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height_thirty"
            android:layout_weight="3.5"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height_fourty"
            android:layout_weight="4">


            <TextView
                android:id="@+id/tv_toolbar_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_twenty"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height_thirty"
            android:layout_weight="2.5"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/groups_toolbar"
                android:layout_width="@dimen/image_width_thirty_five"
                android:layout_height="@dimen/image_height_twenty_two"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/grouparrow"/>

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.Toolbar>
