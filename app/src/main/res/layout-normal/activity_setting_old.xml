<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fitsSystemWindows="true"
                                        tools:openDrawer="start">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.nglinx.pulse.activity.HomeActivity">
        <!-- include your toolbar layout-->
        <include 
            android:id="@+id/inc_toolbar"
            layout="@layout/toolbar_setting"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="20">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="20">

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".5"/>

                                <RelativeLayout
                                    android:id="@+id/manage_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/myrect"
                                    android:clickable="true"
                                    android:elevation="2dp"
                                    android:foreground="@drawable/ripple_effect">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="sans-serif"
                                        android:text="Manage User"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/text_size_sixteen"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".3"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="4.5"
                                    android:background="@drawable/myrect"
                                    android:elevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="4">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2">

                                            <TextView
                                                android:id="@+id/speedview"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerVertical="true"
                                                android:text="Speed"
                                                android:textColor="#000000"
                                                android:textSize="@dimen/text_size_sixteen"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:weightSum="2">

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="1">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:orientation="horizontal"
                                                        android:weightSum="2">

                                                        <RelativeLayout
                                                            android:layout_width="0dp"
                                                            android:layout_height="match_parent"
                                                            android:layout_weight=".6">

                                                            <RadioButton
                                                                android:id="@+id/rb_miles"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_alignParentEnd="true"
                                                                android:layout_centerVertical="true"
                                                                android:layout_marginEnd="@dimen/text_size_fourteen"
                                                                android:textColor="#000000"/>
                                                        </RelativeLayout>

                                                        <RelativeLayout
                                                            android:layout_width="0dp"
                                                            android:layout_height="match_parent"
                                                            android:layout_weight="1">

                                                            <TextView
                                                                android:id="@+id/metric"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_centerHorizontal="true"
                                                                android:layout_centerVertical="true"
                                                                android:text="MpH"
                                                                android:textColor="#000000"
                                                                android:textSize="@dimen/text_size_twelve"/>
                                                        </RelativeLayout>


                                                    </LinearLayout>

                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="1">


                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:orientation="horizontal"
                                                        android:weightSum="2">

                                                        <RelativeLayout
                                                            android:layout_width="0dp"
                                                            android:layout_height="match_parent"
                                                            android:layout_weight=".6">

                                                            <RadioButton
                                                                android:id="@+id/rb_kms"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_centerHorizontal="true"
                                                                android:layout_centerVertical="true"
                                                                android:textColor="#000000"/>


                                                        </RelativeLayout>

                                                        <RelativeLayout
                                                            android:layout_width="0dp"
                                                            android:layout_height="match_parent"
                                                            android:layout_weight="1">

                                                            <TextView
                                                                android:id="@+id/imperial"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_centerHorizontal="true"
                                                                android:layout_centerVertical="true"
                                                                android:text="KMph"
                                                                android:textColor="#000000"
                                                                android:textSize="@dimen/text_size_twelve"/>
                                                        </RelativeLayout>

                                                    </LinearLayout>

                                                </RelativeLayout>

                                            </LinearLayout>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight=".2">

                                            <View
                                                android:id="@+id/view1"
                                                android:layout_width="fill_parent"
                                                android:layout_height="1dp"
                                                android:background="#cccccc"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:weightSum="2">

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".8">

                                                    <TextView
                                                        android:id="@+id/limit"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:text="Set Speed Limit"
                                                        android:textColor="#000000"
                                                        android:textSize="@dimen/text_size_twelve"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".5"
                                                    android:focusableInTouchMode="true">

                                                    <EditText
                                                        android:id="@+id/et_speed_limit"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:hint="000"
                                                        android:inputType="number"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".7">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:text="KMph / Mph"
                                                        android:textSize="@dimen/text_size_twelve"/>

                                                </RelativeLayout>
                                            </LinearLayout>


                                        </RelativeLayout>


                                    </LinearLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".3"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="8"
                                    android:background="@drawable/myrect"
                                    android:elevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="7.5">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2">

                                            <TextView
                                                android:id="@+id/notification"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerVertical="true"
                                                android:text="Notification"
                                                android:textColor="#000000"
                                                android:textSize="@dimen/text_size_sixteen"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:weightSum="2">

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".9">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:text="Phone Notification"
                                                        android:textColor="#000000"
                                                        android:textSize="@dimen/text_size_sixteen"/>
                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".2">

                                                    <View
                                                        android:id="@+id/view"
                                                        android:layout_width="1dp"
                                                        android:layout_height="@dimen/layout_height_thirty"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:background="#000000"/>

                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".9">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:text="InApp Notification"
                                                        android:textColor="#000000"
                                                        android:textSize="@dimen/text_size_sixteen"/>
                                                </RelativeLayout>

                                            </LinearLayout>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="5">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:weightSum="2">

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.9">

                                                    <CheckBox
                                                        android:id="@+id/checkbox_terms"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"/>

                                                    <TextView
                                                        android:id="@id/tv_address"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/checkbox_terms"
                                                        android:layout_alignBottom="@+id/checkbox_terms"
                                                        android:layout_alignStart="@+id/text1"
                                                        android:text="Friend Request"/>

                                                    <CheckBox
                                                        android:id="@+id/cb_phone_fence"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/checkbox_terms"/>

                                                    <TextView
                                                        android:id="@+id/text1"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/cb_phone_fence"
                                                        android:layout_alignBottom="@+id/cb_phone_fence"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_toEndOf="@+id/cb_phone_fence"
                                                        android:text="Fence Breach"/>

                                                    <CheckBox
                                                        android:id="@+id/cb_phone_speed"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/cb_phone_fence"/>

                                                    <TextView
                                                        android:id="@+id/text2"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/cb_phone_speed"
                                                        android:layout_alignBottom="@+id/cb_phone_speed"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_toEndOf="@+id/cb_phone_speed"
                                                        android:text="OverSpeeding"/>

                                                    <CheckBox
                                                        android:id="@+id/checkbox3"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/cb_phone_speed"/>

                                                    <TextView
                                                        android:id="@+id/text3"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/checkbox3"
                                                        android:layout_alignBottom="@+id/checkbox3"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_toEndOf="@+id/checkbox3"
                                                        android:text="Tracking Me"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".2">

                                                    <View
                                                        android:id="@+id/view2"
                                                        android:layout_width="1dp"
                                                        android:layout_height="@dimen/layout_height_two_hundred"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:background="#000000"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.9">

                                                    <CheckBox
                                                        android:id="@+id/checkbox4"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"/>

                                                    <TextView
                                                        android:id="@+id/text4"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/checkbox4"
                                                        android:layout_alignBottom="@+id/checkbox4"
                                                        android:layout_marginStart="@dimen/layout_margin_left_right_eight"
                                                        android:layout_toEndOf="@+id/cb_email_fence"
                                                        android:text="Friend Request"/>

                                                    <CheckBox
                                                        android:id="@+id/cb_email_fence"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/checkbox4"/>

                                                    <TextView
                                                        android:id="@+id/text5"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/cb_email_fence"
                                                        android:layout_alignBottom="@+id/cb_email_fence"
                                                        android:layout_marginStart="@dimen/layout_margin_left_right_eight"
                                                        android:layout_toEndOf="@+id/cb_email_fence"
                                                        android:text="Fence Breach"/>

                                                    <CheckBox
                                                        android:id="@+id/cb_email_speed"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/cb_email_fence"/>

                                                    <TextView
                                                        android:id="@+id/text6"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/cb_email_speed"
                                                        android:layout_alignBottom="@+id/cb_email_speed"
                                                        android:layout_marginStart="@dimen/layout_margin_left_right_eight"
                                                        android:layout_toEndOf="@+id/cb_email_speed"
                                                        android:text="OverSpeeding"/>

                                                    <CheckBox
                                                        android:id="@+id/checkbox7"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_below="@+id/cb_email_speed"/>

                                                    <TextView
                                                        android:id="@+id/text7"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignBaseline="@+id/checkbox7"
                                                        android:layout_alignBottom="@+id/checkbox7"
                                                        android:layout_marginStart="@dimen/layout_margin_left_right_eight"
                                                        android:layout_toEndOf="@+id/checkbox7"
                                                        android:text="Tracking Me"/>


                                                </RelativeLayout>

                                            </LinearLayout>
                                        </RelativeLayout>


                                    </LinearLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".3"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="4.5"
                                    android:background="@drawable/myrect"
                                    android:elevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="4">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2">

                                            <TextView
                                                android:id="@+id/fenceview"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:layout_centerVertical="true"
                                                android:text="Fence"
                                                android:textColor="#000000"
                                                android:textSize="@dimen/text_size_sixteen"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:weightSum="2">

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".8">

                                                    <TextView
                                                        android:id="@+id/shape"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:text="Default Shape"
                                                        android:textColor="#000000"
                                                        android:textSize="@dimen/text_size_twelve"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="1">

                                                    <Spinner
                                                        android:id="@+id/spinner_fence"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="match_parent"
                                                        android:background="@android:drawable/btn_dropdown"
                                                        android:entries="@array/shapes"
                                                        android:overlapAnchor="false"
                                                        android:popupBackground="#ffffff"
                                                        android:spinnerMode="dropdown"
                                                        android:theme="@style/MatchSpinnerThemeshape"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".2">


                                                </RelativeLayout>
                                            </LinearLayout>


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight=".2"
                                            android:visibility="gone">

                                            <View
                                                android:id="@+id/view3"
                                                android:layout_width="fill_parent"
                                                android:layout_height="1dp"
                                                android:background="#cccccc"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5"
                                            android:visibility="gone">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:weightSum="2">

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".8">

                                                    <TextView
                                                        android:id="@+id/radius"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:text="Default Radius"
                                                        android:textColor="#000000"
                                                        android:textSize="@dimen/text_size_twelve"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight=".5"
                                                    android:focusableInTouchMode="true">

                                                    <EditText
                                                        android:id="@+id/editdefaultradius"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:hint="00"
                                                        android:inputType="number"/>


                                                </RelativeLayout>

                                            </LinearLayout>


                                        </RelativeLayout>


                                    </LinearLayout>

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.7"
                                    android:weightSum="2">

                                    <Button
                                        android:id="@+id/btn_ok"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.99"
                                        android:background="#0095da"
                                        android:foreground="@drawable/ripple_effect"
                                        android:onClick="onSaveSettings"
                                        android:text="OK"
                                        android:textColor="#ffffff"/>

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_height="match_parent"
                                        android:background="#ffffff"
                                        android:layout_weight="0.02"/>

                                    <Button
                                        android:id="@+id/btn_cancel"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:background="#0095da"
                                        android:foreground="@drawable/ripple_effect"
                                        android:onClick="onCancelSettings"
                                        android:text="Cancel"
                                        android:textColor="#ffffff"
                                        android:layout_weight="0.99"
                                        />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight=".5"/>

                            </LinearLayout>

                        </android.support.v4.widget.NestedScrollView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <!--<android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:visibility="gone"
